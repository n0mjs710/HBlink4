{
    "global": {
        "max_missed": 3,
        "timeout_duration": 15,
        "disable_ipv6": false,
        "bind_ipv4": "",
        "bind_ipv6": "::",
        "port_ipv4": 62071,
        "port_ipv6": 62071,
        "logging": {
            "file": "logs/hblink.log",
            "console_level": "INFO",
            "file_level": "INFO",
            "retention_days": 30
        },
        "stream_timeout": 2.0,
        "stream_hang_time": 5.0,
        "user_cache": {
            "timeout": 600
        }
    },
    "dashboard": {
        "enabled": true,
        "disable_ipv6": false,
        "transport": "tcp",
        "host_ipv4": "127.0.0.1",
        "host_ipv6": "::1",
        "port": 8765,
        "unix_socket": "/home/cort/hblink4/dashboard/data/hblink4.sock",
        "buffer_size": 65536
    },
    "blacklist": {
        "patterns": [
            {
                "name": "Blocked IDs",
                "description": "Should never be used",
                "match": {
                    "ids": [1, 2]
                },
                "reason": "Repeated abuse of network"
            },
            {
                "name": "Blocked Range",
                "description": "Unauthorized network range",
                "match": {
                    "id_ranges": [[3, 99999]]
                },
                "reason": "Unauthorized DMR-MARC range"
            },
            {
                "name": "Blocked Callsigns",
                "description": "Banned operators",
                "match": {
                    "callsigns": ["BADACTOR*", "SPAM*"]
                },
                "reason": "Network abuse"
            }
        ]
    },
    "repeater_configurations": {
        "patterns": [
            {
                "name": "KS-DMR Network",
                "description": "Repeaters in the KS-DMR network",
                "match": {
                    "id_ranges": [[312000,312099]],
                    "ids": [315035,3120400, 3129054],
                    "callsigns": ["WA0EDA*"]
                },
                "config": {
                    "trust": true,
                    "passphrase": "c0ffee",
                    "slot1_talkgroups": [2, 9],
                    "slot2_talkgroups": [3120]
                }
            },
            {
                "name": "Duplex Hotspots",
                "description": "Full Duplex Hotspot Connections",
                "match": {
                    "callsigns": ["KS1EMS", "N0EYE"]
                },
                "config": {
                    "trust": false,
                    "passphrase": "KS-DMR",
                    "slot1_talkgroups": [2],
                    "slot2_talkgroups": [3120]
                }
            }
        ],
        "default": {
            "passphrase": "KS-DMR",
            "slot1_talkgroups": [],
            "slot2_talkgroups": [3120]
        }
    }
}
