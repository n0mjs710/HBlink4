{
  "global": {
    "ping_time": 5,
    "timeout_duration": 30,
    "max_missed": 3,
    "stream_timeout": 2.0,
    "stream_hang_time": 10.0,
    "bind_ipv4": "127.0.0.1",
    "port_ipv4": 62031,
    "disable_ipv6": true,
